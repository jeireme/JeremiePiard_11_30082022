{
    "source": {
        "include": ["src"],
        "includePattern": ".js$",
        "excludePattern": "(nodes_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLnks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs",
        "readme" : "./README.md",
        "template": "node_modules/clean-jsdoc-theme"
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    },
    "theme_opts": {
        "favicon": "./public/favicon.ico",
        "title": "SportSee | Documentation"
       }
}